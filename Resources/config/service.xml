<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="markup_validator.validator.class">Knplabs\MarkupValidatorBundle\Validation\Validator</parameter>
        <parameter key="markup_validator.processor.w3c.class">Knplabs\MarkupValidatorBundle\Validation\Processor\W3c</parameter>
        <parameter key="markup_validator.processor.w3c.uri">http://validator.w3.org/check</parameter>
        <parameter key="markup_validator.processor.tidy.class">Knplabs\MarkupValidatorBundle\Validation\Processor\Tidy</parameter>
        <parameter key="markup_validator.processor.tidy.binary">tidy</parameter>
        <parameter key="markup_validator.result_factory.default.class">Knplabs\MarkupValidatorBundle\Validation\ResultFactory</parameter>
    </parameters>

    <services>
        <service id="markup_validator.processor.w3c" class="%markup_validator.processor.w3c.class%" public="false">
            <argument>%markup_validator.processor.w3c.uri%</argument>
            <tag name="markup_validator.processor" alias="w3c" />
        </service>

        <service id="markup_validator.processor.tidy" class="%markup_validator.processor.tidy.class%" public="false">
            <argument>%markup_validator.processor.tidy.binary%</argument>
            <tag name="markup_validator.processor" alias="tidy" />
        </service>
    </services>

</container>
